{
  "name": "sparkpress",
  "version": "1.0.0",
  "description": "WordPress environment setup",
  "main": "index.js",
  "scripts": {
    "prestart": "run-p clean node-version",
    "start": "run-p build:dev serve:dev",
    "postserve:dev": "docker-compose down",
    "clean": "rimraf theme/",
    "copy": "node tasks/copy.js",
    "prebuild:dev": "npm run clean",
    "prebuild:prod": "npm run clean",
    "build:dev": "run-p copy sass watch js:watch",
    "build:prod": "run-s copy js:prod 'sass -- --style compressed'",
    "serve:dev": "docker-compose up",
    "sass": "sass src/scss/base.scss theme/css/base.css",
    "postsass": "postcss theme/css/base.css --use autoprefixer -r",
    "js:watch": "webpack --progress --config=webpack.dev.js --mode development -w",
    "js:prod": "webpack -p --progress --config=webpack.prod.js --mode production",
    "watch": "node tasks/watch.js",
    "test": "mocha src/**/*spec.js",
    "test:ci": "nyc --reporter=lcov mocha",
    "stylelint": "stylelint src/scss/**/*.scss src/scss/*.scss --color --formatter verbose",
    "eslint": "eslint src/js",
    "phplint": "vendor/squizlabs/php_codesniffer/bin/phpcs --standard=sparkpress-standard.xml --extensions=php ./src/php",
    "node-version": "check-node-version --package",
    "twiglint": "twigcs src/php/views",
    "lint": "run-p phplint stylelint eslint twiglint"
  },
  "engines": {
    "node": ">=12.18.0",
    "npm": ">=6.14.0"
  },
  "author": "SparkBox",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/register": "^7.10.5",
    "@lhci/cli": "^0.4.0",
    "@sparkbox/eslint-config-sparkbox": "^1.1.1",
    "@sparkbox/stylelint-config-sparkbox": "^1.0.2",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "check-node-version": "^4.0.3",
    "chokidar": "^3.4.0",
    "colors": "^1.4.0",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.6",
    "jsdom": "^16.3.0",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss-cli": "^7.1.1",
    "run-all": "^1.0.1",
    "sass": "^1.26.5",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "smooth-scroll": "^16.1.3",
    "stylelint": "^13.3.3",
    "stylelint-scss": "^3.17.2",
    "sync-glob": "^1.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.10.4",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5"
  }
}
